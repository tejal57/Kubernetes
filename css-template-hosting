apiVersion: v1
kind: Pod 
metadata:
  name: temp-pod 
  namespace: temp 
  labels:
    app: css
spec: 
  containers: 
  - name: temp-cont 
    image: pratikborge/nginx:latest 
    ports: 
    - containerPort: 80
      protocol: TCP 
--- 
apiVersion: v1
kind: Service 
metadata: 
  name: mytempserv 
  namespace: temp 
spec: 
  selector: 
   app: css 
  type: NodePort 
  ports: 
   - port: 80 
     targetPort: 80 
     protocol: TCP 
     name: temp-cont
...
